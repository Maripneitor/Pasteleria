<style>
    /* --- ESTILOS GLOBALES BASE --- */
    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        font-size: 9.5pt;
        color: #333;
        margin: 0;
        line-height: 1.4;
    }

    .page-container {
        padding: 0; /* Margins handled by Puppeteer */
    }

    .page-break {
        page-break-before: always;
    }

    /* Watermarks */
    .watermark {
        position: fixed;
        z-index: -1;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(-45deg);
        font-size: 80px;
        font-weight: bold;
        opacity: 0.15;
        white-space: nowrap;
        pointer-events: none;
    }
    .paid-watermark { color: #28a745; }
    .cancel-watermark { color: #dc3545; }
    .urgent-watermark { color: #ffc107; }

    /* Header */
    .header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding-bottom: 15px;
        margin-bottom: 15px;
        border-bottom: 2px solid <%= (config && config.primaryColor) || '#ec4899' %>;
    }

    .header-branding {
        display: flex;
        flex-direction: column;
    }

    .logo-img {
        max-height: 60px;
        max-width: 200px;
        margin-bottom: 5px;
        object-fit: contain;
    }

    .business-name {
        font-size: 16pt;
        font-weight: bold;
        color: <%= (config && config.primaryColor) || '#ec4899' %>;
        text-transform: uppercase;
    }

    .header-meta {
        text-align: right;
    }

    .folio-badge {
        background-color: <%= (config && config.primaryColor) || '#ec4899' %>;
        color: white;
        padding: 5px 10px;
        border-radius: 4px;
        font-weight: bold;
        font-size: 12pt;
        display: inline-block;
        margin-bottom: 5px;
    }

    /* Grid Layout */
    .grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 15px; }
    .grid-3 { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 10px; }
    
    .section {
        background: #fff;
        border: 1px solid #e9ecef;
        border-radius: 6px;
        padding: 10px;
        margin-bottom: 10px;
        break-inside: avoid;
    }

    .section-title {
        font-size: 10pt;
        font-weight: bold;
        color: <%= (config && config.primaryColor) || '#666' %>;
        border-bottom: 1px solid #eee;
        padding-bottom: 4px;
        margin-bottom: 8px;
        text-transform: uppercase;
    }

    .data-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 4px;
    }
    .data-label { font-weight: 600; color: #555; margin-right: 5px; }
    .data-value { font-weight: 400; color: #000; text-align: right; flex: 1; }

    /* Tables */
    table { width: 100%; border-collapse: collapse; font-size: 9pt; }
    th, td { border: 1px solid #dee2e6; padding: 6px; text-align: left; }
    th { background: #f8f9fa; font-weight: bold; }

    /* Footer */
    .footer {
        margin-top: 30px;
        padding-top: 10px;
        border-top: 1px solid #eee;
        font-size: 8pt;
        color: #777;
        text-align: center;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    /* Utility */
    .text-center { text-align: center; }
    .text-right { text-align: right; }
    .text-bold { font-weight: bold; }
    .text-large { font-size: 1.2em; }
    .alert-box {
        background: #fff3cd;
        border-left: 4px solid #ffc107;
        padding: 10px;
        margin-bottom: 10px;
    }
</style>
