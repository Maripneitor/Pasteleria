<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body { font-family: 'Helvetica', sans-serif; font-size: 12px; color: #333; }
        h1 { text-align: center; color: #ec4899; }
        .meta { text-align: center; margin-bottom: 20px; font-size: 14px; }
        table { width: 100%; border-collapse: collapse; margin-top: 10px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #fce7f3; color: #831843; }
        .total-row { font-weight: bold; background-color: #fdf2f8; }
        .footer { margin-top: 30px; text-align: center; font-size: 10px; color: #777; }
    </style>
</head>
<body>
    <h1>Reporte de Corte de Caja</h1>
    <div class="meta">
        <strong>Fecha:</strong> <%= date %><br>
        <strong>Sucursales:</strong> <%= branches.join(', ') || 'Todas' %>
    </div>

    <table>
        <thead>
            <tr>
                <th>Folio</th>
                <th>Entrega</th>
                <th>Cliente</th>
                <th>Descripción</th>
                <th>Total</th>
                <th>Anticipo</th>
                <th>Saldo</th>
                <th>Estatus</th>
            </tr>
        </thead>
        <tbody>
            <% 
            let totalVenta = 0;
            let totalAnticipo = 0;
            let totalSaldo = 0;
            
            folios.forEach(f => { 
                const saldo = (f.total || 0) - (f.anticipo || 0);
                totalVenta += Number(f.total || 0);
                totalAnticipo += Number(f.anticipo || 0);
                totalSaldo += Number(saldo);
            %>
            <tr>
                <td><%= f.id %></td>
                <td><%= f.hora_entrega || 'N/A' %></td>
                <td><%= f.cliente_nombre || 'General' %></td>
                <td><%= f.descripcion_diseno || f.sabor_pan || 'Sin descripción' %></td>
                <td>$<%= Number(f.total || 0).toFixed(2) %></td>
                <td>$<%= Number(f.anticipo || 0).toFixed(2) %></td>
                <td>$<%= saldo.toFixed(2) %></td>
                <td><%= f.estatus_folio %></td>
            </tr>
            <% }); %>
            
            <tr class="total-row">
                <td colspan="4" style="text-align: right;">TOTALES:</td>
                <td>$<%= totalVenta.toFixed(2) %></td>
                <td>$<%= totalAnticipo.toFixed(2) %></td>
                <td>$<%= totalSaldo.toFixed(2) %></td>
                <td></td>
            </tr>
        </tbody>
    </table>

    <div class="footer">
        Generado automáticamente por el Sistema La Fiesta el <%= new Date().toLocaleString() %>
    </div>
</body>
</html>
